#include <stdio.h>
#include <ctype.h>

int main() {
    char str[1000];

    // Read input string
    printf("Enter a sentence:\n");
    fgets(str, sizeof(str), stdin);

    int i = 0;
    int capitalizeNext = 1;

    while (str[i]) {
        if (isspace(str[i])) {
            capitalizeNext = 1;
        } else if (capitalizeNext && isalpha(str[i])) {
            str[i] = toupper(str[i]);
            capitalizeNext = 0;
        } else {
            str[i] = tolower(str[i]);
        }
        i++;
    }

    printf("Sentence case:\n%s", str);
    return 0;
}
