#include <stdio.h>

int main() {
    int size, i, temp;

    // Get the size of the array from the user
    printf("Enter the size of the array: ");
    scanf("%d", &size);

    // Declare a variable-length array (supported by C99 and later)
    int arr[size];

    // Get the array elements from the user
    printf("Enter %d integers: ", size);
    for (i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Reverse the array using a single for loop
    for (i = 0; i < size / 2; i++) {
        // Swap elements symmetrically from the start and end of the array
        temp = arr[i];
        arr[i] = arr[size - 1 - i];
        arr[size - 1 - i] = temp;
    }

    // Print the reversed array
    printf("Reversed array: ");
    for (i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
