#include <stdio.h>

int main() {
    char str[1000]; // Buffer to hold the input string
    int count = 0;

    // Read input including spaces
    fgets(str, sizeof(str), stdin);

    // Count characters until null terminator
    while (str[count] != '\0') {
        count++;
    }

    // Subtract 1 if newline character is included by fgets
    if (count > 0 && str[count - 1] == '\n') {
        count--;
    }

    printf("%d\n", count);
    return 0;
}
