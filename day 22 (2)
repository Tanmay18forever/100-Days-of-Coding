#include <stdio.h>

int main() {
    int n, i;
    double sum = 0.0; // Use double for accurate floating-point calculations

    printf("Enter the number of terms (n): ");
    scanf("%d", &n);

    // Calculate the sum of the series
    for (i = 0; i < n; i++) {
        double numerator = (double)(2 * i + 1); // Numerator: 1, 3, 5, ...
        double denominator = (double)(2 * i + 2); // Denominator: 2, 4, 6, ...
        
        // The first term is 1, which can be seen as 1/1 or (2*0+1)/(2*0+2) simplified to 1.
        // For the first term (i=0), the denominator would be 2*0+2 = 2.
        // However, the series starts with 1, not 1/2.
        // Special handling for the first term or adjusting the formula:
        if (i == 0) {
            sum += 1.0; // Add the first term (1) directly
        } else {
            sum += numerator / denominator;
        }
    }

    printf("The sum of the series up to %d terms is: %.4f\n", n, sum);

    return 0;
}
