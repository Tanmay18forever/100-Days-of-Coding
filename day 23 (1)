#include <stdio.h>

int main() {
    int n, i;
    double sum = 0.0; // Use double for accurate floating-point calculations
    int numerator = 2;
    int denominator = 3;

    printf("Enter the number of terms (n): ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Please enter a positive integer for n.\n");
        return 1; // Indicate an error
    }

    for (i = 0; i < n; i++) {
        sum += (double)numerator / denominator;
        numerator += 2;      // Numerator increases by 2 in each term
        denominator += 4;    // Denominator increases by 4 in each term
    }

    printf("The sum of the series up to %d terms is: %.4lf\n", n, sum);

    return 0; // Indicate successful execution
}
