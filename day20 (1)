#include <stdio.h>

int main() {
    int number;
    long long product_of_odd_digits = 1; // Initialize to 1 for product calculation
    int digit;

    printf("Enter an integer: ");
    scanf("%d", &number);

    // Handle the case of 0 separately, as its only digit is even.
    if (number == 0) {
        printf("The number contains no odd digits. Product is 1 (conventionally).\n");
        return 0;
    }

    // Iterate through each digit of the number
    while (number > 0) {
        digit = number % 10; // Get the last digit

        // Check if the digit is odd
        if (digit % 2 != 0) {
            product_of_odd_digits *= digit; // Multiply if it's an odd digit
        }

        number /= 10; // Remove the last digit
    }

    printf("The product of the odd digits is: %lld\n", product_of_odd_digits);

    return 0;
}
