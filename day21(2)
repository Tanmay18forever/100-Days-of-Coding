#include <stdio.h>
#include <string.h> // Required for strlen()

int main() {
    char binary[100]; // Declare a character array to store the binary string
    char onesComplement[100]; // Declare an array to store the 1's complement
    int i;

    printf("Enter a binary number: ");
    scanf("%s", binary); // Read the binary number as a string

    int len = strlen(binary); // Get the length of the binary string

    // Calculate the 1's complement
    for (i = 0; i < len; i++) {
        if (binary[i] == '0') {
            onesComplement[i] = '1';
        } else if (binary[i] == '1') {
            onesComplement[i] = '0';
        } else {
            printf("Invalid binary input. Please enter only '0's and '1's.\n");
            return 1; // Indicate an error
        }
    }
    onesComplement[len] = '\0'; // Null-terminate the complement string

    printf("Original binary number: %s\n", binary);
    printf("1's complement: %s\n", onesComplement);

    return 0; // Indicate successful execution
}
